{
	"info": {
		"_postman_id": "kafka-message-queue-demo",
		"name": "Kafka Message Queue Demo",
		"description": "Collection để test các API endpoints của Kafka Message Queue Demo",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/messages/health",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"messages",
						"health"
					]
				},
				"description": "Kiểm tra trạng thái của service"
			},
			"response": []
		},
		{
			"name": "Send Simple Message",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/messages/send-simple?content=Xin chào Kafka&sender=Minh",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"messages",
						"send-simple"
					],
					"query": [
						{
							"key": "content",
							"value": "Xin chào Kafka",
							"description": "Nội dung tin nhắn"
						},
						{
							"key": "sender",
							"value": "Minh",
							"description": "Người gửi"
						}
					]
				},
				"description": "Gửi tin nhắn đơn giản với query parameters"
			},
			"response": []
		},
		{
			"name": "Send Message (JSON)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"content\": \"Đây là tin nhắn demo từ Kafka\",\n    \"sender\": \"Minh\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/messages/send",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"messages",
						"send"
					]
				},
				"description": "Gửi tin nhắn với JSON body (ID và timestamp sẽ được tự động tạo)"
			},
			"response": []
		},
		{
			"name": "Send Message (Full JSON)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": \"msg-001\",\n    \"content\": \"Tin nhắn đầy đủ với ID và timestamp\",\n    \"sender\": \"Minh\",\n    \"timestamp\": \"2024-01-15T10:30:00\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/messages/send",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"messages",
						"send"
					]
				},
				"description": "Gửi tin nhắn với đầy đủ thông tin (ID, content, sender, timestamp)"
			},
			"response": []
		},
		{
			"name": "Send Message (Vietnamese)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"content\": \"Đây là tin nhắn tiếng Việt có dấu\",\n    \"sender\": \"Nguyễn Văn Minh\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/messages/send",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"messages",
						"send"
					]
				},
				"description": "Gửi tin nhắn tiếng Việt có dấu"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}
